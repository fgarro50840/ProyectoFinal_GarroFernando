@model IEnumerable<ProyectoFinal_GarroFernando.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="card mt-auto col-md-auto mx-auto">
    <div class="card-header">
        <h3 class="card-title">Lista de usuarios actuales:</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nombre completo:
                    </th>
                    <th>
                        Correo electrónico:
                    </th>
                    <th>
                        Teléfono:
                    </th>
                    <th>
                        Edad:
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido1) @Html.DisplayFor(modelItem => item.Apellido2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefono)
                        </td>
                        <td>
                            @{
                                string edadTxt = "-";                               
                                var hoy = DateTime.Today;
                                var fn = item.FechaNacimiento.Date;
                                int edad = hoy.Year - fn.Year;
                                if (hoy < fn.AddYears(edad)) edad--;
                                edadTxt = $"{edad} años";               
                            }
                            @edadTxt
                        </td>
                        <td>
                            @if (User.IsInRole("Profesor"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            }
                            |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a> |
                            @if (User.IsInRole("Profesor"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @if (User.IsInRole("Profesor"))
        {
            <a asp-action="Create" class="btn btn-primary btn-block">Agregar nuevo usuario</a>
        }
        else
        {
            <div class="card-footer">
                <a class="btn btn-danger btn-block" asp-area="" asp-controller="Home" asp-action="Index">Volver al menú principal"</a>
            </div>
        }
    </div>
</div>

