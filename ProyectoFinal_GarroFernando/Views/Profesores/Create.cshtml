@model ProyectoFinal_GarroFernando.Models.Profesor

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="card mt-5 col-md-6 mx-auto">
        <div class="card-header">
            <h3 class="card-title">Datos del nuevo profesor:</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UsuarioId" class="control-label"></label>
                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Especialidad" class="control-label"></label>
                    <input asp-for="Especialidad" class="form-control" />
                    <span asp-validation-for="Especialidad" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear nuevo profesor" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-danger btn-block">Volver a la lista principal</a>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}