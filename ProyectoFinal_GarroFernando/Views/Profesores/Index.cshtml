@model IEnumerable<ProyectoFinal_GarroFernando.Models.Profesor>

@{
    ViewData["Title"] = "Index";
}


<div class="card mt-auto col-md-auto mx-auto">
    <div class="card-header">
        <h3 class="card-title">Lista de profesores actuales:</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Nombre:
                    </th>
                    <th>
                        Especialidad:
                    </th>
                    <th>
                        Estado actual:
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @($"{item.Usuario?.Nombre} {item.Usuario?.Apellido1} {item.Usuario?.Apellido2}".Trim())
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Especialidad)
                        </td>
                        <td>
                            @if (item.Activo)
                            {
                                <span>Activo</span>
                            }
                            else
                            {
                                <span>Inactivo</span>
                            }
                        </td>
                        <td>
                            @if (User.IsInRole("Profesor"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            }
     |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a> |
                            @if (User.IsInRole("Profesor"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        @if (User.IsInRole("Profesor"))
        {
            <a asp-action="Create" class="btn btn-primary btn-block">Agregar nuevo profesor</a>
        }
        else
        {
            <div class="card-footer">
                <a class="btn btn-danger btn-block" asp-area="" asp-controller="Home" asp-action="Index">Volver al menú principal"</a>
            </div>
        }
    </div>
</div>
