@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <span class="header-info">Usuario: @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="header-info">Cerrar Sesión</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="header-info" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
    </li>
}
</ul>


<style>

    .header-info {
        display: inline-block;
        background: #e9ecef;
        color: #176C8C;
        font-weight: 700;
        font-size: 1.2rem;
        padding: .22rem .80rem;
        border-radius: 10px;
        border: 2px solid #0f4e61;
        text-decoration: none !important;
    }

</style>