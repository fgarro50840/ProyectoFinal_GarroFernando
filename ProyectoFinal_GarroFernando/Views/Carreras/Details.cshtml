@model ProyectoFinal_GarroFernando.Models.Carrera

@{
    ViewData["Title"] = "Details";
}


<div class="card mt-5 col-md-6 mx-auto">
    <div class="card-header">
        <h3 class="card-title">Datos de la carrera</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-10">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-10">
                Código:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Codigo)
            </dd>
            <dt class="col-sm-10">
                Estado actual:
            </dt>
            <dd class="col-sm-10">
                @(Model.Activa ? "Activa" : "Desactiva")
            </dd>

        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-danger btn-block">Volver a la lista principal</a>
    </div>
</div>