@model ProyectoFinal_GarroFernando.Models.Carrera

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="card mt-5 col-md-6 mx-auto">
        <div class="card-header">
            <h3 class="card-title">Datos de la nueva carrera:</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre:</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label">Codigo:</label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activa" /> @Html.DisplayNameFor(model => model.Activa)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear nueva carrera" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-danger btn-block">Volver a la lista principal</a>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}