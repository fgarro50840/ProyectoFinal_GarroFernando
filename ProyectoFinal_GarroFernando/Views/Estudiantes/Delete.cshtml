@model ProyectoFinal_GarroFernando.Models.Estudiante

@{
    ViewData["Title"] = "Delete";
}

<div class="card mt-5 col-md-6 mx-auto">
    <div class="card-header">
        <h3 class="card-title">Datos del estudiante a eliminar</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-10">
                Nombre:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Nombre)
            </dd>
            <dt class="col-sm-10">
                Fecha de inscripción:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInscripcion)
            </dd>
            <dt class="col-sm-10">
                Estado actual:
            </dt>
            <dd class="col-sm-10">
                @(Model.Activo ? "Activa" : "Desactiva")
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar estudiante" class="btn btn-warning btn-block" />
        </form>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-danger btn-block">Volver a la lista principal</a>
    </div>
</div>