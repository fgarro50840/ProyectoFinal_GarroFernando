@model ProyectoFinal_GarroFernando.Models.Estudiante

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="card mt-5 col-md-6 mx-auto">
        <div class="card-header">
            <h3 class="card-title">Editar datos del estudiante</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="UsuarioId" class="control-label"></label>
                    <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                    <span asp-validation-for="UsuarioId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaInscripcion" class="control-label"></label>
                    <input asp-for="FechaInscripcion" class="form-control" />
                    <span asp-validation-for="FechaInscripcion" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar cambios del estudiante" class="btn btn-primary" />
                </div>
            </form>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-danger btn-block">Volver a la lista principal</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
